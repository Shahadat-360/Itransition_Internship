@{
    ViewData["Title"] = "Test Dropbox Integration";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Test Dropbox Integration</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form asp-action="TestDropbox" method="post">
                        <div class="mb-3">
                            <label for="summary" class="form-label">Test Message</label>
                            <input type="text" class="form-control" id="summary" name="summary" value="Test ticket" />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary">Test Upload to Dropbox</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 